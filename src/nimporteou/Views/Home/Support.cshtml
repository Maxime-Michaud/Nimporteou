    ViewData["Title"] = "Support";
}
<h2>@ViewData["Title"].</h2>
<h3>@ViewData["Message"]</h3>

<style>
.collapseFAQHiddenShow
{
    display:none;
}

.collapsedFAQTitle{
    background-color:transparent;
    cursor:pointer;
}

</style>
<p>Pour nous contacter, vous pouvez cliquer <a asp-area="" asp-controller="Home" asp-action="Contact">ici</a></p>



@{int nombre = -1;}
@{nombre++;}
<div class="collapsedFAQTitle" onclick="showContent(@nombre)">
    <h1>Par où dois-je commencer?&nbsp;&nbsp;&nbsp;⇓</h1>
</div>
<div class="collapseFAQHiddenShow">
    Vous pouvez consulter les événements sans être inscrit, mais pour utiliser la plupart des fonctions du site, vous devez être inscrit.
     Pour ce faire,  vous pouvez cliquer sur "inscription" dans le menu en haut à droite. Tout est gratuit et vous pourrez par la suite voir
    tous les événements selon vos préférences!
</div>

@{nombre++;}
<div class="collapsedFAQTitle" onclick="showContent(@nombre)">
    <h1>Comment je fais pour participer à un événement?&nbsp;&nbsp;&nbsp;⇓</h1>
</div>
<div class="collapseFAQHiddenShow">
    Selectionner un événement et appuyé sur s'inscrire.
</div>

@{nombre++;}
<div class="collapsedFAQTitle" onclick="showContent(@nombre)">
    <h1>Comment je fais pour créer un événement?&nbsp;&nbsp;&nbsp;⇓</h1>
</div>
<div class="collapseFAQHiddenShow">
    Choisir l'onglet "Mes événements", appuyé sur le lien "Créer un événement" et remplir les informations de votre événement.
</div>

@{nombre++;}
<div class="collapsedFAQTitle" onclick="showContent(@nombre)">
    <h1>Comment je fais pour modifier les paramètre de mon compte et mes préférences?&nbsp;&nbsp;&nbsp;⇓</h1>
</div>
